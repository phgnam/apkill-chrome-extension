{
  "manifest_version": 3,
  "name": "Image Extension",
  "version": "1.0",
  "description": "Show all images on the current website",
  "permissions": [
    "storage",
    "activeTab", 
    "scripting",
    "webNavigation",
    "tabs"
  ],
  "host_permissions": ["*://*/*"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}